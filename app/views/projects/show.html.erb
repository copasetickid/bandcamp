<% title(@project.name, "Projects") %>
<div class="page-header">
	<h1><%= @project.name %></h1>
	<p><%= @project.description %></p>

	<ul class="actions">
		<li> 
			<%= link_to edit_project_path(@project), class: "btn btn-primary" do %>
				<i class="fa fa-pencil"></i>Edit Project
			<% end %>
		</li>
		<li>
			<%= link_to  project_path(@project), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this project" } do %>
				<i class="fa fa-trash"></i>Delete Project
			<% end %>
		</li>
	</ul>
</div>