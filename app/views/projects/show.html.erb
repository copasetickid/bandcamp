<% title(@project.name, "Projects") %>
<header>
	<h1><%= @project.name %></h1>
	<p><%= @project.description %></p>
</header
	<ul class="actions">
		<li> 
			<%= link_to edit_project_path(@project), class: "edit" do %>
				<i class="fa fa-pencil"></i>Edit Project
			<% end %>
		</li>
		<li>
			<%= link_to  project_path(@project), class: "delete", method: :delete, data: { confirm: "Are you sure you want to delete this project" } do %>
				<i class="fa fa-trash"></i>Delete Project
			<% end %>
		</li>
		<li>
			<%= link_to "New Ticket", new_project_ticket_path(@project), class: "new" %>
		</li>
	</ul>
